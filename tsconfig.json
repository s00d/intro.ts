{
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es5"
  },
  "include": ["src/**/*.ts"],
  "files": [
    "src/index.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
